/*Задание 5.
Переписать консольное приложение из предыдущего юнита на классы.

Общие требования:

Имена классов, свойств и методов должны быть информативными;
Соблюдать best practices;
Использовать синтаксис ES6.*/
class Kitchen { 
    constructor (name, color, energyConsumption) {
        name = this.name;
        color = this.color;
        energyConsumption = this.energyConsumption;
    }
    getInfo (){ 
        return `${this.name} ${this.color} цвета`
    }
    getTurn (){
        if (turn === 'on') {
            return `${this.name} включен и потребляет ${this.energyConsumption} W`
        } else if (turn ==='off') {
            return `${this.name} выключен`
        }
    }
}
class SmallGadgets extends Kitchen {
    constructor (name, color, size, energyConsumption) {
        super (name, color, energyConsumption);
        size = this.size;
    }
    getSize () {
        if (size === 'small') {
            return `${this.name} стоит на столе`
        } else { 
            return `Закрой холодильник`
        }
    }
}

const refregerator = new Kitchen ('Холодильник', 'белый', 60);
const microwaveOven = new  SmallGadgets ('Микроволновка', 'чёрный', 'small', 600);
const toaster = new SmallGadgets ('Тостер', 'серый', 'small', 300);
let summaryEnergy = (refregerator.energyConsumption + microwaveOven.energyConsumption + toaster.energyConsumption);
console.log (summaryEnergy);